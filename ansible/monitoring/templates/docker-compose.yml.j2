version: '3.7'

services:
  grafana:
    image: grafana/grafana:{{ grafana.version }}
    container_name: grafana
    restart: unless-stopped
    ports:
      - "127.0.0.1:{{ grafana.port }}:{{ grafana.port }}"
    environment:
      - GF_SECURITY_ADMIN_PASSWORD=nimiq
      - GF_USERS_ALLOW_SIGN_UP=false
      - GF_SERVER_ROOT_URL=http://{{ ansible_default_ipv4.address }}/grafana/
      - GF_SERVER_SERVE_FROM_SUB_PATH=true
      - GF_DASHBOARDS_DEFAULT_HOME_DASHBOARD_PATH=/etc/grafana/provisioning/dashboards/nimiq.json
    volumes:
      - grafana-storage:/var/lib/grafana
      - ./provisioning/datasources.yml:/etc/grafana/provisioning/datasources/datasources.yml
      - ./provisioning/dashboards.yml:/etc/grafana/provisioning/dashboards/dashboards.yml
      - ./provisioning/dashboards/:/etc/grafana/provisioning/dashboards/
    networks:
      - app_net

  prometheus:
    image: prom/prometheus:{{ prometheus_version }}
    container_name: prometheus
    restart: unless-stopped
    volumes:
      - ./prometheus.yml:/etc/prometheus/prometheus.yml
      - prometheus-storage:/prometheus
    command:
      - '--config.file=/etc/prometheus/prometheus.yml'
    ports:
      - "127.0.0.1:9090:9090"
    networks:
      - app_net

  loki:
    image: grafana/loki:{{ loki_version }}
    container_name: loki
    restart: unless-stopped
    ports:
      - "127.0.0.1:3100:3100"
    volumes:
      - ./loki-config.yaml:/etc/loki/local-config.yaml
    command: -config.file=/etc/loki/local-config.yaml
    networks:
      - app_net

  promtail:
    image: grafana/promtail:{{ promtail_version }}
    container_name: promtail
    restart: unless-stopped
    volumes:
      - /var/log:/var/log
      - /var/run/docker.sock:/var/run/docker.sock
      - ./promtail-config.yml:/etc/promtail/config.yml
    command: -config.file=/etc/promtail/config.yml
    networks:
      - app_net

  node-exporter:
    image: prom/node-exporter:{{ node_exporter_version}}
    container_name: node-exporter
    restart: unless-stopped
    command:
      - '--path.rootfs=/host'
    volumes:
      - '/:/host:ro,rslave'
    ports:
      - "127.0.0.1:9100:9100"
    networks:
      - app_net

  docker-monitor:
    image: ghcr.io/maestroi/docker-prom-exporter:master
    container_name: docker-monitor
    ports:
      - "127.0.0.1:8080:8080"
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
    environment:
      - DOCKER_HOST=unix:///var/run/docker.sock
    restart: unless-stopped
    networks:
      - app_net

volumes:
  grafana-storage:
  prometheus-storage:

networks:
  app_net:
    external: true
